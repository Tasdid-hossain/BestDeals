<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/imageSecond"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/dealsSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="OFFER HERE"
        android:textStyle="bold"
        android:textColor="#ba327c"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dealsSecond"
        app:layout_constraintLeft_toRightOf="@id/imageSecond"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:padding="5dp"
        android:textSize="16dp"
        android:text="Hey place"/>

    <TextView
        android:id="@+id/detailsSecond"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="hey time here"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toRightOf="@id/imageSecond"
        app:layout_constraintTop_toBottomOf="@id/nameSecond" />

    <TextView
        android:id="@+id/offerSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="asdasd"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        app:layout_constraintLeft_toRightOf="@id/imageSecond"
        app:layout_constraintTop_toBottomOf="@id/detailsSecond"/>

    <TextView
        android:id="@+id/priceSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sfdf"
        android:textSize="16dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toRightOf="@id/imageSecond"
        app:layout_constraintTop_toBottomOf="@id/offerSecond"/>

    <TextView
        android:id="@+id/discountSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123123123"
        android:padding="5dp"
        android:textColor="#42f498"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toRightOf="@id/priceSecond"
        app:layout_constraintTop_toBottomOf="@id/offerSecond"/>

    <TextView
        android:id="@+id/locationSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123123123"
        android:textColor="#000000"
        android:padding="5dp"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/discountSecond"/>

</android.support.constraint.ConstraintLayout>